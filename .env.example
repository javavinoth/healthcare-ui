# Healthcare Application Environment Variables
# Copy this file to .env (for local development) and configure for your environment

# ==============================================================================
# API Configuration
# ==============================================================================

# Backend API Base URL
# IMPORTANT: Backend uses /api as servlet context path (server.servlet.context-path: /api)
# This means ALL backend endpoints are prefixed with /api automatically by Spring Boot
#
# Examples:
#   Local Development:  VITE_API_URL=http://localhost:8080/api
#   Ngrok Tunnel:       VITE_API_URL=https://xxxxx.ngrok-free.app/api
#   Production (same):  VITE_API_URL=/api
#   Production (diff):  VITE_API_URL=https://api.yourdomain.com/api
#
# The /api suffix MUST be included to match the backend servlet context path
VITE_API_URL=http://localhost:8080/api

VITE_APP_NAME=Healthcare Portal
VITE_APP_VERSION=1.0.0

# ==============================================================================
# Environment
# ==============================================================================
# Options: development, staging, production
VITE_ENVIRONMENT=development

# ==============================================================================
# Security Configuration
# ==============================================================================

# Session timeout in milliseconds
# Development: 300000 (5 minutes) for testing
# Production:  900000 (15 minutes) recommended
VITE_SESSION_TIMEOUT=900000

# ==============================================================================
# Feature Flags
# ==============================================================================
VITE_ENABLE_2FA=true
VITE_ENABLE_BIOMETRIC_AUTH=false
VITE_ENABLE_TELEHEALTH=true

# ==============================================================================
# Analytics (HIPAA-compliant only!)
# ==============================================================================
# WARNING: Do NOT use Google Analytics or similar services without:
# 1. Business Associate Agreement (BAA) in place
# 2. Proper PHI anonymization
# 3. Legal review and approval
VITE_ENABLE_ANALYTICS=false

# ==============================================================================
# Development Tools
# ==============================================================================
# React Query DevTools (show/hide in dev mode)
VITE_ENABLE_REACT_QUERY_DEVTOOLS=true

# Debug logging to console (should be false in production)
VITE_ENABLE_DEBUG_LOGS=true
